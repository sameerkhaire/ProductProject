@model ProductDto
<form method="post">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Product Detail</h1>
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Product Name</label>
            </div>
            <div class="col-10 pb-3">
               <h1 class="text-white">@Model.ProductName</h1>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Amount</label>
            </div>
            <div class="col-10 pb-3">
                <span class="text-danger" style="font-size:20px;">@string.Format("{0:c}",Model.DiscountAmount)</span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Expires</label>
            </div>
            <div class="col-10 pb-3">
                <h1 class="text-white">@Model.ExpiryMonth/ @Model.ExpiryYear</h1>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Count" class="form-control"/>
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>
            <div class="col-5 offset-2">
                <a asp-action="Index" class="btn-primary btn form-control">Back to list</a>
            </div>
            <div class="col-5">
                <button type="submit" class="btn btn-primary form-control" style="height:50px">Add to Cart</button>
            </div>
        </div>
    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}