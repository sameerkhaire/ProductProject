@model IEnumerable<ProductDto>
<form>
    <div class="col-12 text-center">
        <h1 class="text-white">Product list</h1>
    </div>
    <div class="container row">
        @foreach(var prod in Model){
        <div class="col-12 col-md-6">
            <div class="p-0 my-3 border rounded">
                <div class="card">
                    <h3 class="card-title text-white-50 text-center py-2">@prod.ProductName</h3>
                    <img src="https://placehold.co/600*400" class="card-img-top" />
                    <div class="card-body">
                        <div class="d-flex justify-content-between py-2">
                            <a>Price</a>
                            <span class="text-danger" style="font-size:20px;">@string.Format("{0:c}",prod.DiscountAmount)</span>
                          @*  <span class="badge bg-warning text-white p-2">Amount</span>*@
                        </div>
                            <div class="d-flex justify-content-between py-2">
                                <a>Expires</a>
                                <a class="card-text">@prod.ExpiryMonth/@prod.ExpiryYear</a>
                            </div>
                        <div class="row">
                            <div class="col">
                                    <a asp-action="ProductDetails" asp-route-ProductId="@prod.ProductId" class="btn btn-success form-control">Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        }
    </div>
</form>
