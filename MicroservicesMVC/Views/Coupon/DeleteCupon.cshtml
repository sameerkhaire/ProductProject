@model CouponDto
<form asp-action="DeleteCupon">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center"> Delete Coupon</h1>
        <input asp-for="CouponId"/>
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Coupon Name</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CouponName" class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Descriptions</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CouponDescription" class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;"> Amount</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CouponAmount" class="form-control" />
            </div>
            <div class="col-5 offset-2">
                <a asp-action="CouponIndex" class="btn-primary btn form-control">Back to list</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>
